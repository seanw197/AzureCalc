@model AzureCalc.Models.Service

@{
    ViewData["Title"] = "Calculate";
}

<h1>Calculate Azure Service Charge</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Confirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Service: @Html.DropDownListFor(x => Model.PricePerHour, new SelectList(Model.InstanceList, "Value", "Text"), htmlAttributes: new { @class = "form-control", Model.Instance })
             
               <p></p>
                Quantity (Minimum = 2): @Html.TextBoxFor(x => Model.Quantity)
            <p></p>
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
        </form>
        <p></p>
        @ViewBag.Charge
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
